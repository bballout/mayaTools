#select joint hierarchy
cmds.SelectHierarchy()
sel = cmds.ls(sl = True)

joints = []

for obj in sel:
    if cmds.nodeType(obj) == 'joint':
        joints.append(obj)
        
cmds.select(joints)


sel = cmds.ls(sl=True)

for obj in sel:
    target = '%s_RIG'%obj
    cmds.parentConstraint(target,obj,mo=True)
    cmds.connectAttr('%s.scale'%target,'%s.scale'%obj)